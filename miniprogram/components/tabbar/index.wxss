/* components/tabbar/index.wxss */
.lookAround-tabbar{
  z-index: 99;
  bottom: 0;
  height: 97rpx;
  padding: 12rpx 0rpx;
  display: flex;
  width: 100%;
  position: fixed;
  background-color: #ffffff;
  box-sizing: border-box;
}
.lookAround-tabbar::after{
  content: '';
  position: absolute;
  width: 200%;
  height: 200%;
  top: 0;
  left: 0;
  border-top: 1px solid rgba(177, 177, 177, 0.6);
  transform: scale(0.5);
  transform-origin: 0 0;
}
.lookAround-tabbar .item-left,.item-center,.item-right{
  display: flex;
  width: 33.33%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 20rpx;
  color: #b1b1b1;
  z-index: 99;
  font-weight: bold;
}
.lookAround-tabbar .item-left,.item-center,.item-right.active{
  color: purple;
}
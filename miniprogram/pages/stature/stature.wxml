<view class='header'>
  <image src='../../images/where.jpg' style='height:250rpx '></image>
  <text class='where'>你的身高是？</text>
</view>

<view class="page">
  <view class="page__hd">
    <view class="page__title"  style='color:purple'>150</view>
    <view class="page__desc" style='color:purple'>cm</view>
  </view>
  <view class="page__bd">
    <view class="weui-grids">
      <block wx:for="{{grids_150}}" wx:key="*this" wx:for-item='itemName'>
        <view bindtap='select'  class="weui-grid" hover-class="weui-grid_active" >
          <!-- <image class="weui-grid__icon" src="../images/icon_tabbar.png" /> -->
          <view data-status='{{itemName}}' class="weui-grid__label"  wx:key="index">{{itemName}}</view>
        </view>
      </block>
    </view>
  </view>
</view>


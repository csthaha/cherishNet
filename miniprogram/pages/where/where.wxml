<!--miniprogram/pages/where/where.wxml-->
<view class='header'>
  <image src='../../images/where.jpg' style='height:250rpx '></image>
  <text class='where'>你的工作地区在哪里？</text>
</view>

<view>
  <!-- <view>{{year}}年{{month}}月{{day}}日</view> -->
  <view style='display:flex'>
    <view style='flex:1'>{{province}}</view>
    <view style='flex:1'>{{city}}</view>
    <view style='flex:1'>{{county}}</view>
  </view>
  <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{provinces}}" style="line-height: 50px" wx:key='index'>{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" style="line-height: 50px" wx:key='index'>{{item}}
        
      </view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{countys}}" style="line-height: 50px" wx:key='index'>{{item}}</view>
    </picker-view-column>
  </picker-view>
</view>

<view class='button'>
  <button class='btn'>下一步</button>
</view>